<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/jetdesauvegarde"
        android:id="@+id/textView"
        android:textColor="#888888"
        android:textAlignment="center"
        android:paddingLeft="13dp"
        android:background="@drawable/textlinetop"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/vigueur"
                android:id="@+id/textVigueur"
                android:textColor="#222222"
                android:background="#ffffff"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/reflexes"
                android:id="@+id/textReflexe"
                android:textColor="#222222"
                android:background="#ffffff"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/volonte"
                android:id="@+id/textVolonte"
                android:textColor="#222222"
                android:background="#ffffff"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/valueVig"
                android:textColor="#000000"
                android:gravity="right"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/valueRef"
                android:textColor="#000000"
                android:gravity="right"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20"
                android:id="@+id/valueVol"
                android:textColor="#000000"
                android:gravity="right"
                android:paddingRight="13dp"
                android:paddingLeft="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="14dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>